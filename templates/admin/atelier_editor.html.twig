{% extends 'admin/layout.html.twig' %}
{% block title %}{{ title }}{% endblock title %}



{% block admin_content %}

    <div id="background" class="carousel slide carousel-fade background" data-ride="carousel">
        <div id="text" class="col-md-12 text-center"></div>
        <!-- div vide pour texte qui apparait avec chaque slide
        dans carousel -->

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset('img/46.jpg') }}" alt="First slide">
            </div>

            <div class="carousel-item">
                <video class="video-fluid w-100" autoplay loop muted>
                    <source src="{{ asset('video/Macaron.mp4') }}" type="video/mp4"/>
                </video>
                <!--  <img class="d-block w-100" src="images/53.jpg" alt="Second slide"> -->
            </div>


            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('img/54.jpg') }}" alt="Third slide">
            </div>
        </div>
    </div>

    <div class="container" id="main-atelier-editor">
        <h1 class="text-center">{{ title }}</h1>
        {% if form.vars.data.id is not empty %}
            <a href="{{ path('admin_atelier-delete', {'id': form.vars.data.id }) }}" class="delete-product btn btn-danger ml-md-4">Supprimer</a>
        {% endif %}


    {{ form_start(form) }}
    {{ form_row(form.name, {
        'label': 'Nom',
    }) }}
    {{ form_row(form.description, {
        'label': 'Description',
    }) }}

    {{ form_row(form.price, {
        'label': 'Prix',
    }) }}

        <h2 class="text-center">Images</h2>
    <div class="images row" data-prototype="{{ form_widget(form.imagess.vars.prototype)|e('html_attr') }}">
        {% for image in form.imagess %}
            <div class="col-md-12 text-center">
                <img class="img-fluid" src="/imgs/upload/{{ image.vars.value.name }}" alt="{{ image.vars.value.description }}" class="img img-fluid">
                <div>{{ form_row(image.description) }}</div>
                <div>{{ form_row(image.file, {
                        'label': false,
                        'required': false,
                        'attr': {
                            'accept': 'image/*',
                        }
                    }) }}</div>
            </div>
        {% endfor %}
        {% if form.imagess|length < 3 %}
            <div class="col-md-4 add-image-container">

            </div>
        {% endif %}
    </div>
    <input type="submit" value="Valider" class="btn btn-dark mt-4">
    {{ form_end(form) }}

    </div>



{% endblock %}
