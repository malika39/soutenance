    <div class="container" id="main-admin-orders">
        <h1 class="text-center">Commandes</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th></th>
                <th>Date</th>
                <th>Statut</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>
                        <a href="{{ path('admin_order-show', { 'id': order.id }) }}">{{ order.id }}</a>
                    </td>
                    <td>
                        {{ order.dateCreated|date('d/m/Y à H\\hi', 'Europe/Paris') }}
                    </td>
                    <td>
                        <div class="badge p-2">
                            {{ order.status }}
                        </div>
                    </td>
                    <td>
                        {{ order.transaction.total }} €
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
