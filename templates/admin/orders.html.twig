{% extends 'admin/layout.html.twig' %}
{% block title %}Commandes{% endblock title %}

{% block admin_content %}

    <div id="background" class="carousel slide carousel-fade background" data-ride="carousel">
        <div id="text" class="col-md-12 text-center"></div>
        <!-- div vide pour texte qui apparait avec chaque slide
        dans carousel -->

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset('img/46.jpg') }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <video class="video-fluid w-100" autoplay loop muted>
                    <source src="{{ asset('video/Macaron.mp4') }}" type="video/mp4"/>
                </video>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('img/54.jpg') }}" alt="Third slide">
            </div>
        </div>
    </div>
    <div class="container" id="main-admin-orders">
        <h1 class="text-center">Commandes</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th></th>
                <th>Date</th>
                <th>Statut</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>
                        <a href="{{ path('admin_order-show', { 'id': order.id }) }}">{{ order.id }}</a>
                    </td>
                    <td>
                        {{ order.dateCreated|date('d/m/Y à H\\hi', 'Europe/Paris') }}
                    </td>
                    <td>
                        <div class="badge p-2">
                            {{ order.status }}
                        </div>
                    </td>
                    <td>
                        {{ order.transaction.total }} €
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
