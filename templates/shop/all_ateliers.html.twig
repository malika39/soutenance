{% extends 'shop/layout.html.twig' %}
{% block title %}Lovin Sweet{% endblock title %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/style2.css') }}"/>
{% endblock %}


{% block content %}



    <img id="product_editor_background" class="" src="{{ asset('img/background-2.jpg') }}" alt="">

    <div class="row" id="carousel">
        <div class="col-md-12">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="img/s_9.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="img/s_10.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="img/s_11.jpg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="img/s_12.jpg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="img/s_13.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>



    <!--  SECTION 1 ATELIERS -->

        <div class="container-fluid" id="section-1-atelier">
            <section class="container text-center">
                <div class="row">
                    {% for ateliers in all_ateliers %}
                    <div class="col-md-4">
                        <a href="/ateliersweet/{{ ateliers.slug }}">
                        <span class="overlay-container">
                          <img class="img-fluid" src="img/28.jpg">
                          <span class="overlay-background">
                            <span class="see-more">
                              <span class="see-more-btn">
                                <span class="hidden">RÃ©server un atelier</span>
                              </span>
                            </span>
                          </span>
                           <span class="link-name">
                               <ul>
                                   <li class="text-center">
                                       <h3>{{ ateliers.name }}</h3>
                                   </li>
                                </span>
                                <span class="link-name">
                                   <li class="text-center">{{ ateliers.description }}</li>
                                </ul>
                            </span>
                        </a>
                    </div>
                {% endfor %}
            </div>

        </section>

    </div>



{% endblock %}




{% block footer %}



{% endblock %}


{% block javascript_final %}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}


