                <h1 class="title-carousel-clear">De délicieux macarons</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="{{ asset('img/cupcakes.jpg') }}" alt="Second slide">
            <div class="carousel-caption d-none d-md-block" id="legend">
                <h1 class="title-carousel">Des cupcakes fondants</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="{{ asset('img/Patisseries.jpg') }}" alt="Third slide">
            <div class="carousel-caption d-none d-md-block" id="legend">
                <h1 class="title-carousel">Des petites merveilles</h1>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
