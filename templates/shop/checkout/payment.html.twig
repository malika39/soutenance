{% extends 'shop/layout.html.twig' %}
{% block title %}Paiement{% endblock %}

{% block content %}
    <div class="container client-section">
        <div class="breadcrumbs">
            <nav aria-label="breadcrumb" id="recap-link">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a href="{{ path('user_account') }}">Identification</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('checkout_address') }}">Adresse</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('checkout_shipping') }}">Livraison</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('checkout_summary') }}">Récapitulatif</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Paiement</li>
                </ol>
            </nav>
        </div>

        <div class="card-body content-card recap-summary">
            <h1>Paiement</h1>

            <script src="https://js.stripe.com/v3/"></script>

            <div class="row">
                <div class="col-md">
                    <h4>Par carte</h4>
                    <div id="card-errors-container" class="my-2 card-errors-container">
                        <span class="badge badge-danger">Erreur</span>
                        <span id="card-errors" class="my-4"></span>
                    </div>
                    <form action="{{ path('stripe_checkout') }}" method="post" id="payment-form"
                          data-stripe-pk="{{ stripe_pk }}">

                        <div class="form-group">
                            <label for="card-number">Numéro</label>
                            <div id="card-number" class="form-control"></div>
                        </div>

                        <div class="form-row">
                            <div class="col">
                                <label for="card-expiry">Date d'expiration</label>
                                <div id="card-expiry" class="form-control"></div>
                            </div>
                            <div class="col">
                                <label for="card-cvc">Cryptogramme</label>
                                <div id="card-cvc" class="form-control"></div>
                            </div>
                        </div>


                        <input type="submit" value="Payer {{ total_price }} €" class="btn button-account mt-4">
                    </form>
                </div>

                <div class="col-md mt-4 mt-md-0">
                    <h4>Avec paypal</h4>
                    <a href="{{ path('paypal_checkout') }}" class="basket-checkout__order btn button-account">Payer avec
                        paypal</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
